{{page-title "Profile"}}
<div class="w-75 mx-auto">
    <div class="text-center h3 p-2">User Profile</div>

    {{#if this.is_error}}
        <div class="alert alert-danger" role="alert">{{this.error_message}}</div>
    {{/if}}
    <div class="mx-auto" style="width:600px;">
        <form {{action "submit" this on="submit"}}>
            <div class="mb-3 row">
                <label class="col-sm-6 col-form-label">First Name</label>
                <label class="col-sm-6 col-form-label">{{@model.data.first_name}}</label>
            </div>
            <div class="mb-3 row">
                <label class="col-sm-6 col-form-label">Last Name</label>
                <label class="col-sm-6 col-form-label">{{@model.data.last_name}}</label>
            </div>
            <div class="mb-3 row">
                <label class="col-sm-6 col-form-label">Customer ID</label>
                <label class="col-sm-6 col-form-label">{{@model.data.customer_id}}</label>
            </div>
            <div class="mb-3 row">
                <label class="col-sm-6 col-form-label">Date of Birth</label>
                <label class="col-sm-6 col-form-label">{{@model.data.date_of_birth}}</label>
            </div>
            <div class="mb-3 row">
                <label class="col-sm-6 col-form-label">Mobile Number</label>
                <div class="col-sm-6">
                    <Input @type="number" @value={{@model.data.mobile_number}} class="form-control"/>
                </div>
            </div>
            <div class="mb-3 row">
                <label class="col-sm-6 col-form-label">Email ID</label>
                <div class="col-sm-6">
                    <Input @type="text" @value={{@model.data.email_id}} class="form-control"/>
                </div>
            </div>
            <div class="mb-3 row">
                <label class="col-sm-6 col-form-label">Registered Date</label>
                <label class="col-sm-6 col-form-label">{{@model.data.register_date}}</label>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Update</button>
            </div>
        </form>
    </div>
</div>
{{outlet}}