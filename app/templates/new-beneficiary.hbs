{{page-title "NewBeneficiary"}}
<div class="w-75 mx-auto">
    <div class="text-center h3 p-2">Add Beneficiary</div>

    {{#if this.is_error}}
        <div class="alert alert-danger" role="alert">{{this.error_message}}</div>
    {{/if}}
    <div class="mx-auto" style="width:600px;">
    <form {{action "submit" this on="submit"}}>
        <div class="mb-3 row">
            <label class="col-sm-4 col-form-label">Nick Name</label>
            <div class="col-sm-8">
                <Input @type="text" @value={{this.nickName}} class="form-control"/>
            </div>
        </div>
        <div class="mb-3 row">
            <div class="col-sm-4 form-check">
                <input class="form-check-input" type="radio" name="type" value="account_number" onchange={{action 'setType' 'account_number'}}>
                <label class="form-check-label">
                    Account Number
                </label>
                </div>
                <div class="col-sm-4 form-check">
                <input class="form-check-input" type="radio" name="type" value="mobile_number" onchange={{action 'setType' 'mobile_number'}}>
                <label class="form-check-label">
                    Mobile Number
                </label>
                </div>
                <div class="col-sm-4 form-check">
                <input class="form-check-input" type="radio" name="type" value="upi_id" onchange={{action 'setType' 'upi_id'}}>
                <label class="form-check-label">
                    UPI ID
                </label>
            </div>
        </div>
        {{#if this.type}}
            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label">
                    {{if this.account_number "Account Number"}}
                    {{if this.mobile_number "Mobile Number"}}
                    {{if this.upi_id "UPI ID"}}
                </label>
                <div class="col-sm-8">
                    <Input @type="text" @value={{this.referenceNumber}} class="form-control"/>
                </div>
            </div>
        {{/if}}
        {{#if this.type}}
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Add</button>
            </div>
        {{/if}}
    </form>
