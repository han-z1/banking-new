{{page-title "NewUpi"}}
<div class="w-75 mx-auto">
    <div class="text-center h3 p-2">UPI Registration</div>

    {{#if this.is_error}}
        <div class="alert alert-danger" role="alert">{{this.error_message}}</div>
    {{/if}}
    <div class="mx-auto" style="width:600px;">
        <form {{action "submit" this on="submit"}}>
            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label">UPI ID</label>
                <div class="col-sm-8">
                    <Input @type="text" @value={{this.upiID}} class="form-control"/>
                </div>
            </div>
            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label">Transaction Pin</label>
                <div class="col-sm-8">
                    <Input @type="password" @value={{this.pin}} class="form-control"/>
                </div>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Register</button>
            </div>
        </form>
    </div>
</div>
{{outlet}}